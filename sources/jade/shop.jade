extends includes/layout.jade

block content
  .all-wrapped
      div.wrap(style = "z-index: -9999")
        
        .col-md-12.gray(style = "margin-top: -20px; margin-bottom: 30px")#scrolled-filters
          
          .row
            .col-md-1 
              h4 Фильтр: 
            
            .col-md-2 
              select.form-control
                option(select='selected')  Производитель
                - var vendors = ['EMKA','EMKA Fort','RZ','EURO Locks','Китай','OSKAR','DIRAK'];
                  each vendor in vendors
                    option= vendor
            .col-md-2 
              h4.text-center
                label.checkbox-inline 
                  input(type='checkbox', value='option1') 
                  | Есть на складе
            .col-md-2 
              h4.text-center
                label.checkbox-inline 
                  input(type='checkbox', value='option1') 
                  | Мастер система
            .col-md-1.arowed
              h4.text-center
                span Цена
                i.fa.fa-long-arrow-up(aria-hidden='true')
            .col-md-2.arowed 
              h4.text-center
                span Новизна
                i.fa.fa-long-arrow-up(aria-hidden='true') 
            
            
            div.clearfix      
          div.clearfix
        div.clearfix
        
        div.col-md-12(style = "margin-top: 90px")

          .row.super-row
          -'use strict';
          - var arr = ['1.png', '2.png', '3.png', '4.png', '5.png', '6.jpg', '7.png', '8.png', '9.png', '10.png', '11.png', '12.jpg']
          
          each name in arr
            .col-sm-6.col-md-3.great-item-card
              .thumbnail
                .img_wrap
                  img(src="product_img/" + name, alt="product.title")
                .caption
                  a(href="product.html")
                    h4 
                      strong Крутой замок
                  h6 Крутая компания, Англия
                  p Краткое описание товара, разные бла-бла-бла-бла

                  .clearfix
                    div.row
                      div.col-md-6
                        p.have-this(style = "margin-top: 10px; margin-bottom: 0px !important") 
                          strong В наличии
                        strong.price 2500 грн
                      div.col-md-6
                        p.have-this.yellow(style = "margin-top: 10px; margin-bottom: 0px !important") 
                          strong 
                    div.row(style = "margin-top: 8px")
                      div.col-md-6
                        strong 
                        a.btn.btn-default.pull-left(href='product.html', role='button') Подробнее 
                      div.col-md-6
                        strong 
                          a.btn.btn-primary.pull-right(href='cart.html', role='button') В Корзину 

              div.great-item-card-hovered    
                .thumbnail
                  .img_wrap
                    img(src="product_img/" + name, alt="product.title")
                  .caption
                    a(href="product.html")
