.lol(id='top-slider')
  .carousel.slide(data-ride='carousel', id='carousel-example-generic')
    // Indicators
    ol.carousel-indicators.hidden
      li.active(data-target='#carousel-example-generic', data-slide-to='0')
      li(data-target='#carousel-example-generic', data-slide-to='1')
      li(data-target='#carousel-example-generic', data-slide-to='2')
    // Wrapper for slides
    .carousel-inner(role='listbox')
      .item.active
        .jumbotron.clearfix
          .col-md-8.col-md-offset-2
            h2.text-center Заголовок 1
            p.text-center Небольшое, но крайне увлекательное описание.  Lorem ipsum dolor sit amet, consectetur adipisicing elit. Placeat perspiciatis repellendus eum sint nobis repellat amet atque facilis dolorum voluptate?
            p.block-center.text-center
              a.btn.btn-default.btn-lg(href='news_open.html', role='button') Узнать больше
      -'use strict';
      - var arr = []
      - for (var i=2; i < 4;i++) { arr.push('Заголовок ' + i)}
      each name in arr
        .item
          .jumbotron.clearfix
            .col-md-8.col-md-offset-2
