              p.block-center.text-center
                a.btn.btn-default.btn-lg(href='#', role='button') Узнать больше
    // Controls
    a.left.carousel-control(href='#carousel-example-generic', role='button', data-slide='prev', style="background-image: none")
      span.glyphicon.glyphicon-chevron-right.fa.fa-arrow-left(aria-hidden='true')
      span.sr-only Previous
    a.right.carousel-control(href='#carousel-example-generic', role='button', data-slide='next', style="background-image: none")
      span.glyphicon.glyphicon-chevron-right.fa.fa-arrow-right(aria-hidden='true')
